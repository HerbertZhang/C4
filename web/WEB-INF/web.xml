<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>shop</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>productList</servlet-name>
		<servlet-class>com.tcp.web.ProductList</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>detail</servlet-name>
		<servlet-class>com.tcp.web.Detail</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.tcp.web.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>userManager</servlet-name>
		<servlet-class>com.tcp.web.UserManager</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>userModify</servlet-name>
		<servlet-class>com.tcp.web.UserModify</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>userRegister</servlet-name>
		<servlet-class>com.tcp.web.UserRegister</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>orderList</servlet-name>
		<servlet-class>com.tcp.web.OrderList</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>orderDetail</servlet-name>
		<servlet-class>com.tcp.web.OrderDetail</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>shoppingCart</servlet-name>
		<servlet-class>com.tcp.web.ShoppingCart</servlet-class>
	</servlet>


	<servlet>
		<servlet-name>orderConfirm</servlet-name>
		<servlet-class>com.tcp.web.OrderConfirm</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>errorServlet</servlet-name>
		<servlet-class>com.tcp.web.ErrorServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>controllerServlet</servlet-name>
		<servlet-class>com.tcp.web.controller.ControllerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>productList</servlet-name>
		<url-pattern>/productList</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>detail</servlet-name>
		<url-pattern>/productDetail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userManager</servlet-name>
		<url-pattern>/userManager</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userModify</servlet-name>
		<url-pattern>/userModify</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userRegister</servlet-name>
		<url-pattern>/userRegister</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>orderList</servlet-name>
		<url-pattern>/orderList</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>orderDetail</servlet-name>
		<url-pattern>/orderDetail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>shoppingCart</servlet-name>
		<url-pattern>/shoppingCart</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>orderConfirm</servlet-name>
		<url-pattern>/orderConfirm</url-pattern>
	</servlet-mapping>


	<servlet-mapping>
		<servlet-name>errorServlet</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>controllerServlet</servlet-name>
		<url-pattern>/*.do</url-pattern>
	</servlet-mapping>


</web-app>